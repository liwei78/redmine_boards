<table class="list">
  <thead><tr>
      <th colspan="3"><%= l(:label_category) %></th>
    </tr></thead>
  <tbody>
    <% BoardList.all(:order => "position ASC").each do |list|
      next if list.new_record? %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td width="30%"><%=h list.name %></td>
        <td width="40%" align="center">
          <%= reorder_links('board_list', {:controller => 'board_lists', :id => list, :action => :update}, :put) %>
        </td>
        <td width="30%" class="buttons">
          <%= link_to "categories", {:controller => "board_categories", :action => "index", :bl => list}%>
          <%= link_to l(:button_edit), {:controller => 'board_lists', :action => 'edit', :id => list}, :class => 'icon icon-edit' %>
          <%= link_to l(:button_delete), list, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div><%= link_to l(:label_asset_category_new), {:controller => 'board_lists', :action => 'new'} %></div>
