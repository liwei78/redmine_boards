<table class="list">
  <thead><tr>
      <th colspan="3">Categories</th>
    </tr></thead>
  <tbody>
    <% for cate in @categories %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td width="30%"><%=h cate.name %></td>
        <td width="40%" align="center">
          <%= reorder_links('board_category', {:controller => 'board_categories', :action => 'update', :id => cate}, :put) %>
        </td>
        <td width="30%" class="buttons">
          <%= link_to l(:button_edit), {:controller => 'board_categories', :action => 'edit', :id => cate}, :class => 'icon icon-edit' %>
          <%= link_to l(:button_delete), cate, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<%= link_to l(:label_asset_category_new), {:controller => 'board_categories', :action => 'new', :bl => @list} %>
</div>
